{
  "name": "k8s-ai-dashboard",
  "version": "1.0.0",
  "description": "A web application for real-time Kubernetes cluster insights and AI-powered analysis.",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/frontend",
    "packages/backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=packages/backend\" \"npm run dev --workspace=packages/frontend\"",
    "build": "npm run build --workspace=packages/frontend && npm run build --workspace=packages/backend",
    "start": "npm run start --workspace=packages/backend"
  },
  "keywords": [
    "kubernetes",
    "react",
    "nodejs",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cubos/kube-templates": "^1.0.1024145",
    "concurrently": "^9.2.1"
  }
}
